<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#999999"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_IMG_heart_1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:src="@drawable/heart"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/main_IMG_heart_2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:src="@drawable/heart"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/main_IMG_heart_3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:src="@drawable/heart"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/coins"
                tools:ignore="ImageContrastCheck"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/main_Text_count_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/_0"
                android:textAlignment="center"
                android:textSize="24sp"
                tools:ignore="RtlHardcoded,TextSizeCheck" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/distance_counter"
                tools:ignore="ImageContrastCheck,RtlHardcoded"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/main_Text_distance_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0_m"
                android:textAlignment="center"
                android:textSize="24sp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="@drawable/road"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <ImageView
                    android:id="@+id/main_IMG_sign_first"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible"
                    android:importantForAccessibility="no" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_IMG_sign_second"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible"
                    android:importantForAccessibility="no" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_IMG_sign_third"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible"
                    android:importantForAccessibility="no" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_IMG_sign_fourth"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible"
                    android:importantForAccessibility="no" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_IMG_sign_fifth"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/barrier"
                    android:visibility="invisible"
                    android:importantForAccessibility="no" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_LAY_car"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#999999"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_IMG_first_Car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/car"
                android:visibility="invisible"
                android:importantForAccessibility="no"
                tools:ignore="NestedWeights" />

            <ImageView
                android:id="@+id/main_IMG_second_Car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/car"
                android:visibility="invisible"
                android:importantForAccessibility="no" />

            <ImageView
                android:id="@+id/main_IMG_third_Car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/car"
                android:importantForAccessibility="no" />

            <ImageView
                android:id="@+id/main_IMG_fourth_Car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/car"
                android:visibility="invisible"
                android:importantForAccessibility="no" />

            <ImageView
                android:id="@+id/main_IMG_fifth_Car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/car"
                android:visibility="invisible"
                android:importantForAccessibility="no" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.15"
            android:background="#88007120">

            <ImageButton
                android:id="@+id/main_BTN_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@null"
                android:importantForAccessibility="no"
                android:src="@drawable/left_arrow"
                tools:ignore="ImageContrastCheck" />

            <ImageButton
                android:id="@+id/main_BTN_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@null"
                android:importantForAccessibility="no"
                android:src="@drawable/right_arrow"
                tools:ignore="ImageContrastCheck" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>